{% extends "BlogBundle::layout.html.twig" %}

{% block content %}
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Sidebar</li>
              <li ><a href="{{ path('_admin_index') }}">Dashboard</a></li>
              <li><a href="{{ path('_comments_list') }}">Posts</a></li>
              <li class="active"><a href="{{ path('_comments_list') }}">Comments</a></li>
              <li><a href="#">Config</a></li>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span9">
          <div class="hero-unit">
            <h2>Comments</h2>
            <table class="table table-striped table-bordered table-condensed">
              <thead>
                <tr>
                  <td>#</td>
                  <th>Email</th>
                  <th>Content</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {% for comment in comments %}
                <tr>
                  <td>{{ comment.id }}</td>
                  <td>{{ comment.email }}</td>
                  <td>{{ comment.content }}</td>
                  <td><a href="{{ path('_comments_delete', { 'id': post.id }) }}"><i class="icon-trash"></i></a></td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div><!--/row-->
        </div><!--/span-->
      </div><!--/row-->

        {% include "BlogBundle::footer.html.twig" %}
{% endblock %}   