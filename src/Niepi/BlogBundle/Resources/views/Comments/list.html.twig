{% extends "BlogBundle::layout.html.twig" %}

{% block content %}
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            {% include "BlogBundle::adminMenu.html.twig" %}
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span9">
          <div class="hero-unit">
            <h2>Comments</h2>
            <table class="table table-striped table-bordered table-condensed">
              <thead>
                <tr>
                  <td>#</td>
                  <th>Post</th>
                  <th>Email</th>
                  <th>Content</th>
                  <th>Date Created</th>                  
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {% for comment in comments %}
                <tr>
                  <td>{{ comment.id }}</td>
                  <td>{{ comment.getPost.title }}</td>
                  <td>{{ comment.email }}</td>
                  <td>{{ comment.content }}</td>
                  <td>{{ comment.dateCreated|date("F jS \\a\\t g:ia") }}</td>
                  <td><a href="{{ path('_comments_delete', { 'id': comment.id }) }}"><i class="icon-trash"></i></a></td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div><!--/row-->
        </div><!--/span-->
      </div><!--/row-->

        {% include "BlogBundle::footer.html.twig" %}
{% endblock %}   